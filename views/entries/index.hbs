<h1>Recent Entries</h1>
<div class="row">
  {{#each entries}}
    <div class="card">
      <div class="card-body">
      <h4 class="card-title"><a href="/entries/{{_id}}">{{title}}</a></h4>
      <div class="chip">
        <img src="{{user.image}}" alt="">
        <a href="/entries/user/{{user._id}}">{{user.displayName}}</a>
      </div>
      <div class="card-image">
        {{{editIcon user ../user _id}}}
      </div>
      <p class="card-text">{{stripTags (truncate body 300)}}</p>
      </div>
      <div class="card-footer text-muted"><a href="/entries/{{_id}}" class="card-link">Read More</a></div>
    </div>
  {{else}}
    <p>No recent entries</p>
  {{/each}}
</div>