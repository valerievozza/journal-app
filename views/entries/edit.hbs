<div class="container-fluid">
  <h3>Edit Entry</h3>
  <form action="/entries/{{entry._id}}" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label class="col-form-label mt-4" for="title">Title</label>
      <input type="text" class="form-control" placeholder="Title" id="title" name="title" value="{{entry.title}}">
    </div>
    <div class="form-group">
      <label for="status" class="form-label mt-4">Public or private?</label>
      <select class="form-select" id="status" name="status">
        {{#select entry.status}}
        <option value="public" selected>Public</option>
        <option value="private">Private</option>
        {{/select}}
      </select>
    </div>
    <div class="form-group">
      <label for="body" class="form-label mt-4">Write your journal entry</label>
      <textarea class="form-control" id="body" name="body" rows="3">{{entry.body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
    <a href="/journal" class="btn btn-link">Cancel</a>
  </form>
</div>




